<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <description>Provides a collection of simple helpers (source-only package).</description>

    <id>Abc.Utilities.Sources</id>
    <version>$version$</version>
    <authors>$authors$</authors>
    <owners>$authors$</owners>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="expression">$licenseExpression$</license>
    <projectUrl>$projectUrl$</projectUrl>
    <releaseNotes>$releaseNotes$</releaseNotes>
    <copyright>$copyright$</copyright>
    <repository type="$repositoryType$" url="$repositoryUrl$" />
    <contentFiles>
      <!-- See https://docs.microsoft.com/en-us/nuget/reference/nuspec#using-the-contentfiles-element-for-content-files -->
      <files include="cs/any/**/*.cs" buildAction="Compile" flatten="false" />
      <files include="cs/any/*.props" buildAction="None" flatten="true" />
    </contentFiles>
  </metadata>
  <files>
    <!-- See https://docs.microsoft.com/en-us/nuget/reference/nuspec#package-folder-structure -->
    <file src="**\*.cs" exclude="bin\**\*.*;obj\**\*.*;AssemblyInfo.cs" target="contentFiles\cs\any\" />
    <file src="CompilerSymbols.props" target="contentFiles\cs\any\" />
  </files>
</package>
