<Project>

  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;netcoreapp2.1;net461;net452</TargetFrameworks>
    <RootNamespace>Abc.Utilities</RootNamespace>

    <_AbcUtilitiesPath>$(SourceRoot)Abc.Utilities\</_AbcUtilitiesPath>
  </PropertyGroup>

  <ItemGroup>
    <!--
      Do not include a ProjectReference for Abc.Utilities.csproj:
        Error CS0433: The type 'PureAttribute' exists in both 'Abc.Utilities' and 'mscorlib'.
    -->
    <FilesToExclude Include="$(_AbcUtilitiesPath)obj\**\*.*" />
    <FilesToExclude Include="$(_AbcUtilitiesPath)System\**\*.*" />

    <Compile Include="$(_AbcUtilitiesPath)**\*.cs" Exclude="@(FilesToExclude)">
      <Visible>false</Visible>
    </Compile>
    <Compile Include="$(_AbcUtilitiesPath)System\NullableAttributes.g.cs">
      <Visible>false</Visible>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Abc.Testing\Abc.Testing.csproj" />
  </ItemGroup>

  <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />

  <!--
    After D.B.targets.
  -->

  <Import Project="$(_AbcUtilitiesPath)_build\TargetFrameworkRange.targets" />

</Project>
