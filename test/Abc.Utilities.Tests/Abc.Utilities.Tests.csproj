<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;netcoreapp2.1;net461;net452</TargetFrameworks>
    <IsTestProject>true</IsTestProject>
    <RootNamespace>Abc.Utilities</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!--
      We cannot include a ProjectReference to Abc.Utilities.csproj:
      Error CS0433: The type 'PureAttribute' exists in both 'Abc.Utilities' and 'mscorlib'.
    -->
    <FilesToExclude Include="$(SourceRoot)Abc.Utilities\AssemblyInfo.cs" />
    <FilesToExclude Include="$(SourceRoot)Abc.Utilities\bin\**\*.*" />
    <FilesToExclude Include="$(SourceRoot)Abc.Utilities\obj\**\*.*" />
    <FilesToExclude Include="$(SourceRoot)Abc.Utilities\System\**\*.*" />

    <Compile Include="$(SourceRoot)Abc.Utilities\**\*.cs" Exclude="@(FilesToExclude)">
      <Visible>false</Visible>
    </Compile>
    <Compile Include="$(SourceRoot)Abc.Utilities\System\NullableAttributes.cs">
      <Visible>false</Visible>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Abc.Testing\Abc.Testing.csproj" />
  </ItemGroup>

</Project>
