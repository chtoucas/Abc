<Project>

  <Import Project="$(MSBuildThisFileDirectory)..\Directory.Build.props" />

  <Choose>
    <When Condition=" '$(BuildingInsideVisualStudio)' == 'true' ">
      <PropertyGroup>
        <DefaultTargetFrameworks>$(DefaultTargetFramework)</DefaultTargetFrameworks>
      </PropertyGroup>
    </When>

    <Otherwise>
      <PropertyGroup>
        <DefaultTargetFrameworks>netcoreapp3.1;netcoreapp2.1</DefaultTargetFrameworks>
        <DefaultTargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(DefaultTargetFrameworks);net461</DefaultTargetFrameworks>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <PropertyGroup>
    <IsPackable>false</IsPackable>

    <GenerateDocumentationFile>false</GenerateDocumentationFile>

    <!-- Warnings.
      CA1034  Nested types should not be visible (Design)
      CA1303  Do not pass literals as localized parameters (Globalization)
      CA1707  Identifiers should not contain underscores (Naming)
      CA2007  Consider calling ConfigureAwait on the awaited task (Reliability)
    -->
    <NoWarn>$(NoWarn);CA1034;CA1303;CA1707;CA2007</NoWarn>
  </PropertyGroup>

</Project>
