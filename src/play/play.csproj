<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SourceRoot)Abc.Utilities.Version.props" />

  <PropertyGroup>
    <TargetFramework>$(DefaultTargetFramework)</TargetFramework>
    <OutputType>Exe</OutputType>

    <!--
      dotnet.exe ignores RunAnalyzers/RunAnalyzersDuringBuild/RunAnalyzersDuringLiveAnalysis,
      this is a VS issue. Fixed in VS 16.7? see https://github.com/dotnet/roslyn/issues/40926
      When done, clean up NoWarn.
    -->
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <NoWarn>$(NoWarn);CA1000;CA1034;CA1303;CA1716</NoWarn>

    <DefineConstants>$(DefineConstants);STRICT_HASKELL</DefineConstants>
    <!--<DefineConstants>$(DefineConstants);MONADS_VIA_MAP_MULTIPLY</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);COMONADS_VIA_MAP_COMULTIPLY</DefineConstants>-->
  </PropertyGroup>

  <ItemGroup>
    <None Update="play.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Clear Abc.Utilities, then include only what's necessary -->
  <PropertyGroup>
    <AbcUtilitiesContent>$(PkgAbc_Utilities_Sources)\contentFiles\</AbcUtilitiesContent>
    <AbcUtilitiesPath>$(AbcUtilitiesContent)cs\any\Abc\</AbcUtilitiesPath>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="$(AbcUtilitiesContent)**" />
    <!--
    <EmbeddedResource Remove="$(AbcUtilitiesContent)**" />
    <None Remove="$(AbcUtilitiesContent)**" />
    -->

    <Compile Include="$(AbcUtilitiesPath)Utilities\Require.cs">
      <Link>Utilities\Require.cs</Link>
    </Compile>
    <Compile Include="$(AbcUtilitiesPath)Utilities\ValidatedNotNullAttribute.cs">
      <Link>Utilities\ValidatedNotNullAttribute.cs</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Abc.Maybe" Version="1.0.2" />
    <PackageReference Include="Abc.Utilities.Sources" Version="$(AbcUtilitiesVersion)" GeneratePathProperty="true" />
  </ItemGroup>

</Project>
