<Project>

  <!--
    Make it unnecessary to set GeneratePathProperty to true,
      <ItemGroup>
        <PackageReference Include="Abc.Utilities.Sources" Version="X.Y.Z" GeneratePathProperty="true" />
      </ItemGroup>
    See https://docs.microsoft.com/en-us/nuget/consume-packages/package-references-in-project-files#generatepathproperty
  -->
  <PropertyGroup>
    <PkgAbc_Utilities_Sources__Content>$([MSBuild]::NormalizePath('$(MSBuildThisFileDirectory)..\contentFiles\'))</PkgAbc_Utilities_Sources__Content>
    <PkgAbc_Utilities_Sources__ContentCSharp>$(PkgAbc_Utilities_Sources__Content)cs\any\abc.utilities\</PkgAbc_Utilities_Sources__ContentCSharp>
  </PropertyGroup>
  
  <!-- Deterministic build -->
  <ItemGroup>
    <SourceRoot Include="$(PkgAbc_Utilities_Sources__Content)" />
  </ItemGroup>

</Project>
