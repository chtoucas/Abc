<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard2.0;netstandard1.1;net461</TargetFrameworks>

    <RootNamespace>Abc.Utilities</RootNamespace>
    <IsPackable>true</IsPackable>
    <Version>0.1.0-alpha14</Version>

    <DefineConstants Condition=" '$(DisableCodeCoverage)' != 'true' ">$(DefineConstants);ABC_UTILITIES_ENABLE_CODE_COVERAGE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(FatBuild)' == 'true' ">
    <TargetFrameworks>
      netstandard2.1;netstandard2.0;netstandard1.1;
      netcoreapp3.1;netcoreapp2.1;
      net461;net452
    </TargetFrameworks>

    <!-- Even if we don't want to use a lock file (error NU1505) -->
    <RestorePackagesWithLockFile>false</RestorePackagesWithLockFile>
    <NuGetLockFilePath>$(MSBuildThisFileDirectory)packages.fat.lock.json</NuGetLockFilePath>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(NoBuild)' == 'true' ">
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
  </PropertyGroup>

  <!-- Source code only package -->
  <PropertyGroup>
    <!--
      Searching google gives me
        https://medium.com/@attilah/source-code-only-nuget-packages-8f34a8fb4738
      but it seems to be a very complicate and fragile solution for something
      that can be achieved by just using a nuspec.

      References:
      - https://docs.microsoft.com/en-us/nuget/reference/msbuild-targets#packing-using-a-nuspec
      - https://docs.microsoft.com/en-us/nuget/create-packages/creating-a-package-msbuild
    -->

    <IncludeBuildOutput>false</IncludeBuildOutput>

    <NuspecFile>$(SourceRoot)Abc.Utilities.Sources.nuspec</NuspecFile>
    <NuspecBasePath>$(MSBuildThisFileDirectory)</NuspecBasePath>
    <NuspecProperties>
      authors=$(Authors);
      copyright=$(Copyright);
      licenseExpression=$(PackageLicenseExpression);
      projectUrl=$(PackageProjectUrl);
      releaseNotes=$(PackageReleaseNotes);
      repositoryType=$(RepositoryType);
      repositoryUrl=$(RepositoryUrl);
      version=$(Version);
    </NuspecProperties>
  </PropertyGroup>

</Project>
