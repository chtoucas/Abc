<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard2.0;netstandard1.1;net461</TargetFrameworks>
    <RootNamespace>Abc.Utilities</RootNamespace>
    <IsPackable>true</IsPackable>

    <Version>0.1.0-alpha15</Version>

    <!-- Allow to build the project as seen by a customer of the package -->
    <DefineConstants Condition=" '$(DisableCodeCoverage)' != 'true' ">$(DefineConstants);ABC_UTILITIES_ENABLE_CODE_COVERAGE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(FatBuild)' == 'true' ">
    <TargetFrameworks>
      netstandard2.1;netstandard2.0;netstandard1.1;
      netcoreapp3.1;netcoreapp2.1;
      net461;net452
    </TargetFrameworks>

    <!-- We don't want to use the default lock file and, even if we don't intend to use one, 
         we must specify it (error NU1505) -->
    <RestorePackagesWithLockFile>false</RestorePackagesWithLockFile>
    <NuGetLockFilePath>$(MSBuildThisFileDirectory)packages.fat.lock.json</NuGetLockFilePath>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(NoBuild)' == 'true' ">
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
  </PropertyGroup>

  <!-- Source code only package -->
  <PropertyGroup>
    <PackageReleaseNotes>See $(RepositoryUrl)blob/master/src/Abc.Utilities/README.md#changelog.</PackageReleaseNotes>

    <IncludeBuildOutput>false</IncludeBuildOutput>

    <NuspecFile>$(SourceRoot)Abc.Utilities.Sources.nuspec</NuspecFile>
    <NuspecBasePath>$(MSBuildThisFileDirectory)</NuspecBasePath>
    <NuspecProperties>
      authors=$(Authors);
      copyright=$(Copyright);
      licenseExpression=$(PackageLicenseExpression);
      projectUrl=$(PackageProjectUrl);
      releaseNotes=$(PackageReleaseNotes);
      repositoryType=$(RepositoryType);
      repositoryUrl=$(RepositoryUrl);
      version=$(Version)
    </NuspecProperties>
  </PropertyGroup>

</Project>
