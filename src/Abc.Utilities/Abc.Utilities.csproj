<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>
      netstandard2.1;netstandard2.0;netstandard1.1;
      netcoreapp3.1;netcoreapp2.1;
      net461;net452
    </TargetFrameworks>
    <IsPackable>true</IsPackable>

    <SourcePacking Condition=" '$(SourcePacking)' == '' ">false</SourcePacking>
  </PropertyGroup>

  <Import Project="$(MSBuildThisFileDirectory)CompilerSymbols.props" />

  <!-- Source only package -->
  <PropertyGroup Condition=" '$(SourcePacking)' == 'true' ">
    <!--
      Searching google for "source only nuget package" gives me
        https://medium.com/@attilah/source-code-only-nuget-packages-8f34a8fb4738
      but it seems to be a very complicate/fragile solution for something that can
      be achieved by just using a nuspec.

      https://docs.microsoft.com/en-us/nuget/reference/msbuild-targets#packing-using-a-nuspec
      https://docs.microsoft.com/en-us/nuget/create-packages/creating-a-package-msbuild
    -->
    <PackageOutputPath>$(ArtifactsRoot)</PackageOutputPath>
    <IncludeBuildOutput>false</IncludeBuildOutput>

    <__PackageVersion>$(VersionPrefix)</__PackageVersion>
    <__PackageVersion Condition=" '$(VersionSuffix)' != '' ">$(__PackageVersion)-$(VersionSuffix)</__PackageVersion>

    <NuspecFile>$(RepositoryRoot)Abc.Utilities.Sources.nuspec</NuspecFile>
    <NuspecBasePath>$(MSBuildThisFileDirectory)</NuspecBasePath>
    <NuspecProperties>
        authors=$(Authors);
        copyright=$(Copyright);
        repositoryType=$(RepositoryType);
        repositoryUrl=$(RepositoryUrl);
        projectUrl=$(PackageProjectUrl);
        licenseExpression=$(PackageLicenseExpression);
        releaseNotes=$(PackageReleaseNotes);
        version=$(__PackageVersion)
    </NuspecProperties>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(NoBuild)' == 'true' ">
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
  </PropertyGroup>

</Project>
