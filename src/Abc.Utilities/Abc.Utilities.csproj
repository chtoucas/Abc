<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <SourceOnlyPackage Condition=" '$(SourceOnlyPackage)' == '' ">true</SourceOnlyPackage>

    <IsPackable>true</IsPackable>

    <!-- Warnings.
      CA1812  Avoid uninstantiated internal classes (Performance)
    -->
    <NoWarn>$(NoWarn);CA1812</NoWarn>
    <NoWarn Condition=" '$(GenerateDocumentationFile)' == 'true' ">$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <!-- Target frameworks -->
  <Choose>
    <When Condition=" '$(SourceOnlyPackage)' == 'true' ">
      <PropertyGroup>
        <TargetFrameworks>
          $(SupportedStandards);
          netcoreapp3.1;netcoreapp2.1;
          net461;net452
        </TargetFrameworks>
      </PropertyGroup>
    </When>

    <Otherwise>
      <PropertyGroup>
        <TargetFrameworks>$(SupportedStandards);net461</TargetFrameworks>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <Import Project="$(MSBuildThisFileDirectory)CompilerSymbols.props" />
  <Import Project="$(MSBuildThisFileDirectory)Retail.props" />

  <PropertyGroup Condition=" '$(NoBuild)' == 'true' ">
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
  </PropertyGroup>

  <!-- Source code only package -->
  <PropertyGroup Condition=" '$(SourceOnlyPackage)' == 'true' ">
    <!--
      Searching google gives me
        https://medium.com/@attilah/source-code-only-nuget-packages-8f34a8fb4738
      but it seems to be a very complicate and fragile solution for something
      that can be achieved by just using a nuspec.

      https://docs.microsoft.com/en-us/nuget/reference/msbuild-targets#packing-using-a-nuspec
      https://docs.microsoft.com/en-us/nuget/create-packages/creating-a-package-msbuild
    -->
    <IncludeBuildOutput>false</IncludeBuildOutput>

    <NuspecFile>$(RepositoryRoot)Abc.Utilities.Sources.nuspec</NuspecFile>
    <NuspecBasePath>$(MSBuildThisFileDirectory)</NuspecBasePath>
    <NuspecProperties>
      authors=$(Authors);
      copyright=$(Copyright);
      description=$(PackageDescription);
      licenseExpression=$(PackageLicenseExpression);
      projectUrl=$(PackageProjectUrl);
      releaseNotes=$(PackageReleaseNotes);
      repositoryType=$(RepositoryType);
      repositoryUrl=$(RepositoryUrl);
      tags=$(PackageTags);
      title=$(Title);
      version=$(Version);
    </NuspecProperties>
  </PropertyGroup>

</Project>
