<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SourceRoot)Abc.Utilities.Version.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard2.0;netstandard1.1;net461</TargetFrameworks>
    <TargetFrameworks Condition=" '$(FatBuild)' == 'true' ">
      netstandard2.1;netstandard2.0;netstandard1.1;
      netcoreapp3.1;netcoreapp2.1;
      net461;net452
    </TargetFrameworks>

    <IsPackable>true</IsPackable>

    <Version>$(AbcUtilitiesVersion)</Version>
    <Title></Title>

    <PackageDescription>
      <![CDATA[
This is a source code only package providing various utilities for internal use.
    ]]>
    </PackageDescription>

    <PackageTags>Helpers Utilities</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(NoBuild)' == 'true' ">
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
  </PropertyGroup>

  <!-- Source code only package? -->
  <PropertyGroup>
    <!-- One can build a "binary" package but it is pretty useless as everything
         is internal. NB: set ContinuousIntegrationBuild to true to produce
         deterministic dll's. -->
    <SourceOnlyPackage Condition=" '$(SourceOnlyPackage)' == '' ">true</SourceOnlyPackage>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(SourceOnlyPackage)' == 'true' ">
    <!--
      Searching google gives me
        https://medium.com/@attilah/source-code-only-nuget-packages-8f34a8fb4738
      but it seems to be a very complicate and fragile solution for something
      that can be achieved by just using a nuspec.

      References:
      - https://docs.microsoft.com/en-us/nuget/reference/msbuild-targets#packing-using-a-nuspec
      - https://docs.microsoft.com/en-us/nuget/create-packages/creating-a-package-msbuild
    -->

    <IncludeBuildOutput>false</IncludeBuildOutput>

    <NuspecFile>$(SourceRoot)Abc.Utilities.Sources.nuspec</NuspecFile>
    <NuspecBasePath>$(MSBuildThisFileDirectory)</NuspecBasePath>
    <NuspecProperties>
      authors=$(Authors);
      copyright=$(Copyright);
      description=$(PackageDescription);
      licenseExpression=$(PackageLicenseExpression);
      projectUrl=$(PackageProjectUrl);
      releaseNotes=$(PackageReleaseNotes);
      repositoryType=$(RepositoryType);
      repositoryUrl=$(RepositoryUrl);
      tags=$(PackageTags);
      title=$(Title);
      version=$(Version);
    </NuspecProperties>
  </PropertyGroup>

</Project>
